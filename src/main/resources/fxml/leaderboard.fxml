<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LeaderboardController">
    <children>
        <ImageView fitHeight="800.0" fitWidth="1200.0" pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@../assets/imgs/menu/select-bg.png" />
            </image>
        </ImageView>
        <Button fx:id="backButton" layoutX="20.0" layoutY="30.0" text="返回" onAction="#handleBackButton" />
        <TableView fx:id="leaderboardTable" layoutX="200.0" layoutY="200.0" prefHeight="400.0" prefWidth="800.0" styleClass="custom-table">
            <columns>
                <TableColumn fx:id="usernameColumn" prefWidth="200.0" text="用户名" />
                <TableColumn fx:id="remaining_healthColumn" prefWidth="200.0" text="剩余血量" />
                <TableColumn fx:id="consumed_coinsColumn" prefWidth="200.0" text="消耗金币" />
                <TableColumn fx:id="scoreColumn" prefWidth="200.0" text="得分" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
